@page "/projects/detail/{ProjectID:int}"



<div class="align-self-center">
    @*<h4>@Project.Title</h4>
    <h4>@Project.Requirement</h4>
    <h4>@Project.Design</h4>
    <h4>@Project.CompletionDate</h4>*@

    <div class="form-group row">
        <div class="col-sm-8">
            <label type="text" class="form-control-plaintext" style="font-weight:bold;">@ProjectViewModel.Title</label>
        </div>
    </div>


    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Requirement:</label>
        <div class="col-sm-8">
            <label type="text" class="form-control-plaintext">@ProjectViewModel.Requirement</label>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Design:</label>
        <div class="col-sm-8">
            <label type="text" class="form-control-plaintext">@ProjectViewModel.Design</label>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Date Completed</label>
        <div class="col-sm-8">
            <label type="text" class="form-control-plaintext">@ProjectViewModel.CompletionDate</label>
        </div>
    </div>

    @* In the future, each of these lists should be dynamically generated *@
    <lh>Frameworks</lh>
    <ul>
       
       
        @if (Frameworks.Count() > 0)
        {
            foreach (Category category in Frameworks)
            {
                <li>@category.Name</li>
            }
        }

    </ul>

    <lh>Languages</lh>
    <ul>
        @if (Languages.Count() > 0)
        {
            foreach (Category category in Languages)
            {
                <li>@category.Name</li>
            }
        }
    </ul>

    <lh>Platforms</lh>
    <ul>
        @if (Platforms.Count() > 0)
        {
            foreach (Category category in Platforms)
            {
                <li>@category.Name</li>
            }
        }
    </ul>

</div>

<div>
    <a href=@($"projects/edit/{ProjectViewModel.ID}")>Edit</a>
    <button type="button" @onclick="@DeleteProject">Delete</button>
</div>


