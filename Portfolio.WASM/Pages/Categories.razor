@page "/projects/{CategoryTypeFilter}"

<h3>Categories</h3>

@foreach(Category category in CategoryList)
{
    <lh>@category.Name</lh>
    <ul>
        @foreach(Portfolio.Shared.ProjectViewModel projectVM in ProjectViewModels)
        {
            if (projectVM.Categories.Contains<Category>(category))
            {
                <li>
                    <a href="@($"projects/detail/{projectVM.ID}")">@projectVM.Title</a>
                </li>
            }
        }
    </ul>
}

